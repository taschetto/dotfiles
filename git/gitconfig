[user]
	name = Guilherme Taschetto
	email = gtaschetto@gmail.com
[credential]
	helper = cache --timeout=86400
[diff]
  tool = meld
[merge]
  tool = mymeld
[mergetool "mymeld"]
  cmd = meld "$LOCAL" "$MERGED" "$REMOTE"
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
	ui = true
  pager = true
[color "branch"]
	current = red
	local = yellow
	remote = green
[color "diff"]
	meta = 11
	frag = magenta bold
	old = red bold
	new = green bold
	func = 146 bold
	commit = yellow bold
	whitespace = red reverse
[color "status"]
	added = green
	changed = yellow
	untracked = red
[core]
  pages = less -FRSX
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
	branches = branch -a
	remotes = remote -v
	au = update-index --assume-unchanged
	nau = update-index --no-assume-unchanged
	un = ls-files -v | grep '^[[:lower]]'
	sw = switch
	ci = commit
	st = status
	co = checkout
	br = branch
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[push]
	default = current
[commit]
  gpgsign = true
[gpg]
  program = gpg2
[pull]
  ff = only
  default = all
[rerere]
  enabled = true
[branch]
  autosetuprebase = always
[branch "develop"]
  rebase = true
[interactive]
	diffFilter = diff-so-fancy --patch
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
