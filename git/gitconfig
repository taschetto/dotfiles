[credential]
	helper = cache --timeout=3600  
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
	ui = true
  pager = true
[color "branch"]
	current = red
	local = yellow
	remote = green
[color "diff"]
	meta = cyan
	frag = magenta
	old = red bold
	new = green bold
[color "status"]
	added = green
	changed = yellow
	untracked = red
[core]
  pages = less -FRSX
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[push]
  default = simple 
